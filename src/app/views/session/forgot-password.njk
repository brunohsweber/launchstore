{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render("Esqueceu a senha?", "password container") %}

  <form method="POST" action="/users/forgot-password" >

    <div class="fields">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o seu email cadastrado" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')" required oninvalid="setCustomValidity('Coloque o seu email')" oninput="setCustomValidity('')">
        </div>
      </div>
    </div>

    <button type="submit" class="button">Recuperar senha</button>

  </form>

  {% endcall %}

{% endblock content %}